# Forever Slim - Environment Variables
# Copia questo file come .env.local e compila i valori

# ===================
# SUPABASE
# ===================
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxx...
SUPABASE_SERVICE_ROLE_KEY=eyJxxx...

# ===================
# STRIPE
# ===================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Prodotti Stripe (crea su dashboard Stripe)
STRIPE_PRICE_1KIT=price_xxx
STRIPE_PRICE_3KIT=price_xxx

# ===================
# FACEBOOK PIXEL
# ===================
NEXT_PUBLIC_FB_PIXEL_ID=123456789

# ===================
# GOOGLE ANALYTICS (futuro)
# ===================
# NEXT_PUBLIC_GA_ID=G-xxx

# ===================
# APP CONFIG
# ===================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Forever Slim

# ===================
# DEVELOPMENT
# ===================
# Imposta su true per bypassare auth durante lo sviluppo
DEV_BYPASS_AUTH=false
